{
  "scripts": {
    "build:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./static/css/tailwind.css",
    "build:pagefind": "pagefind --site public --output-subdir search",
    "build": "npm run build:css && npm run build:pagefind",
    "build:watch": "npm run build:css --watch && npm run build:pagefind --watch && hugo server",
    "watch:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./static/css/tailwind.css --watch"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  },
  "devDependencies": {
    "pagefind": "^1.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-go-template": "^0.0.15"
  }
}