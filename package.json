{
  "scripts": {
    "build:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./static/css/tailwind.css",
    "build:pagefind": "pagefind --site public --output-subdir search",
    "build:hugo": "hugo --gc --minify",
    "build": "npm run build:css && npm run build:hugo && npm run build:pagefind",
    "dev:css": "npx tailwindcss -i ./assets/css/tailwind.css -o ./static/css/tailwind.css --watch",
    "dev:hugo": "hugo server --disableFastRender",
    "dev:pagefind": "nodemon --watch public --exec \"npm run build:pagefind\" --ext html",
    "dev:cms": "npx decap-server",
    "dev": "npm-run-all --parallel dev:css dev:hugo dev:pagefind dev:cms"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "pagefind": "^1.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-go-template": "^0.0.15"
  }
}